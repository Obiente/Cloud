{
  "name": "@obiente/node-api",
  "version": "0.1.0",
  "private": true,
  "description": "Obiente Cloud API Server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "generate:proto": "turbo run generate:proto",
    "db:migrate": "pnpm --filter @obiente/database db:migrate",
    "db:seed": "pnpm --filter @obiente/database db:seed"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.9.0",
    "@connectrpc/connect": "^2.1.0",
    "@connectrpc/connect-express": "^2.1.0",
    "@connectrpc/connect-fastify": "^2.1.0",
    "@connectrpc/connect-node": "^2.1.0",
    "@connectrpc/connect-web": "^2.1.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@obiente/database": "workspace:*",
    "@obiente/proto": "workspace:*",
    "@obiente/types": "workspace:*",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "jose": "^6.1.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@obiente/config": "workspace:*",
    "@types/node": "^24.5.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
