# Environment variables for Obiente Cloud API

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/obiente_cloud

# Zitadel Authentication
ZITADEL_URL=https://your-zitadel.domain.com
ZITADEL_CLIENT_ID=your_client_id
ZITADEL_CLIENT_SECRET=your_client_secret
ZITADEL_REDIRECT_URI=http://localhost:3000/auth/callback
ZITADEL_JWKS_URI=https://your-zitadel.domain.com/.well-known/jwks

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Stripe (Billing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production