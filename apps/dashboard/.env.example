# Obiente Cloud Dashboard - Environment Variables
# Copy this file to .env and customize with your values

# ============================================================================
# AUTHENTICATION
# ============================================================================

# OIDC/OAuth2 Configuration
# Zitadel authentication server base URL (public - accessible on client-side)
NUXT_PUBLIC_OIDC_BASE=https://auth.obiente.cloud

# OIDC Issuer URL (public)
NUXT_PUBLIC_OIDC_ISSUER=https://obiente.cloud

# OIDC Client ID (from your Zitadel application) (public)
NUXT_PUBLIC_OIDC_CLIENT_ID=339499954043158530

# Development mode - Disables authentication (NEVER use in production!)
# When enabled, uses mock user "mem-development" with admin/owner permissions
# Set to "true" to enable, leave unset or "false" for production
# DISABLE_AUTH=true

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Backend API host URL (public - accessible on client-side)
NUXT_PUBLIC_API_HOST=http://localhost:3001

# Request host (your dashboard URL - server-side only)
NUXT_REQUEST_HOST=http://localhost:3000

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================

# Session encryption password (required for secure sessions)
# Generate with: openssl rand -hex 32
# Must be at least 32 characters
NUXT_SESSION_PASSWORD=changeme_GENERATE_64_CHAR_RANDOM_STRING_HERE

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Node environment
NODE_ENV=development
# ============================================================================
# GITHUB INTEGRATION
# ============================================================================

# GitHub OAuth Client ID (public - for OAuth flow)
# Create a GitHub OAuth App at: https://github.com/settings/developers
# Authorization callback URL should be: {YOUR_DOMAIN}/settings?tab=integrations&provider=github
NUXT_PUBLIC_GITHUB_CLIENT_ID=YOUR_GITHUB_CLIENT_ID_HERE

# GitHub OAuth Client Secret (server-side only - used by backend to exchange code for token)
# Do NOT expose this in client-side code
GITHUB_CLIENT_SECRET=YOUR_GITHUB_CLIENT_SECRET_HERE

# GitHub API Base URL (optional, defaults to https://api.github.com)
# GITHUB_API_BASE=https://api.github.com

# Frontend Stripe publishable key (exposed to client)
# Get from: https://dashboard.stripe.com/apikeys
# This is safe to expose publicly - it's used client-side for Stripe.js
# Publishable key (starts with pk_)
NUXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
