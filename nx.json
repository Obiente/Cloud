{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/**/*.test.[jt]s?(x)?(.snap)",
      "!{projectRoot}/**/*.spec.[jt]s?(x)?(.snap)",
      "!{projectRoot}/.env*",
      "!{projectRoot}/.env.local",
      "!{projectRoot}/**/__tests__/**",
      "!{projectRoot}/**/test/**",
      "!{projectRoot}/**/tests/**",
      "!{projectRoot}/**/*.test.ts",
      "!{projectRoot}/**/*.test.tsx",
      "!{projectRoot}/**/*.test.js",
      "!{projectRoot}/**/*.test.jsx",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.spec.tsx",
      "!{projectRoot}/**/*.spec.js",
      "!{projectRoot}/**/*.spec.jsx"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/.github/workflows/ci.yml",
      "{workspaceRoot}/go.work"
    ]
  },
  "nxCloudId": "68e80d8e5d5106040099565c",
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    },
    {
      "plugin": "@nx/nuxt/plugin",
      "options": {
        "buildTargetName": "nuxt:build",
        "serveTargetName": "serve",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps",
        "serveStaticTargetName": "serve-static",
        "buildStaticTargetName": "build-static"
      }
    },
    {
      "plugin": "@nx/docker",
      "options": {
        "buildTarget": "docker:build",
        "runTarget": "docker:run"
      }
    },
    "@obiente-lab/nx-go"
  ],
  "targetDefaults": {
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "nuxt:build": {
      "cache": true,
      "dependsOn": ["^nuxt:build"],
      "inputs": [
        "production",
        "^production",
        {
          "externalDependencies": ["nuxt"]
        }
      ],
      "outputs": [
        "{workspaceRoot}/apps/dashboard/.nuxt",
        "{projectRoot}/.output"
      ]
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "build-deps": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  }
}
