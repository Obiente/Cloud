{
  "name": "@obiente/database",
  "version": "0.1.0",
  "private": true,
  "description": "Database models and migrations for Obiente Cloud",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "migrations"
  ],
  "scripts": {
    "build": "tsc",
    "_dev": "tsc --watch",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/migrate.ts",
    "db:seed": "tsx src/seed.ts",
    "db:studio": "drizzle-kit studio",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.44.7",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@obiente/config": "workspace:*",
    "@obiente/types": "workspace:*",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
