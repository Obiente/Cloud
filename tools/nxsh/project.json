{
  "name": "nxsh",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/nxsh/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/nxsh",
        "main": "tools/nxsh/src/index.ts",
        "tsConfig": "tools/nxsh/tsconfig.lib.json",
        "assets": [
          "tools/nxsh/*.md",
          {
            "input": "./tools/nxsh/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./tools/nxsh/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./tools/nxsh",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./tools/nxsh",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
